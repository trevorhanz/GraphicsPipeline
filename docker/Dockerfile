FROM ubuntu:20.04

ENV ANDROID_NDK_HOME /opt/android-ndk


# ------------------------------------------------------
# Install required tools
# ------------------------------------------------------

RUN apt-get update -qq

RUN apt install -y cmake
RUN apt install -y wget
RUN apt install -y unzip

# ------------------------------------------------------
# Android NDK
# ------------------------------------------------------

# download
RUN mkdir /opt/android-ndk-tmp
RUN cd /opt/android-ndk-tmp && wget -q http://dl.google.com/android/repository/android-ndk-r21d-linux-x86_64.zip
# uncompress
RUN cd /opt/android-ndk-tmp && unzip ./android-ndk-r21d-linux-x86_64.zip
# move to it's final location
RUN cd /opt/android-ndk-tmp && mv ./android-ndk-r21d /opt/android-ndk
# remove temp dir
RUN rm -rf /opt/android-ndk-tmp
# add to PATH
ENV PATH ${PATH}:${ANDROID_NDK_HOME}

# ------------------------------------------------------
# Cleanup and rev num
# ------------------------------------------------------

# Cleaning
RUN apt-get clean

CMD bitrise -version
